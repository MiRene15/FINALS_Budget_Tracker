@model FINALS_Budget_Tracker.Infrastructure.Entities.Budget

@{
    ViewData["Title"] = "Budget Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">@Model.Name</h2>
        <p class="text-muted mb-0">Category: @Model.Category?.Name</p>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
    </div>

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Amount</dt>
            <dd class="col-sm-9">$@Model.Amount.ToString("N2")</dd>

            <dt class="col-sm-3">Period</dt>
            <dd class="col-sm-9">@Model.StartDate.ToString("MMM dd, yyyy") - @Model.EndDate.ToString("MMM dd, yyyy")</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.Description) ? Model.Description : "â€”")</dd>
        </dl>
    </div>
</div>


