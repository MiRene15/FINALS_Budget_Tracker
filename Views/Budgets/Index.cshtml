@model IEnumerable<FINALS_Budget_Tracker.Infrastructure.Entities.Budget>

@{
    ViewData["Title"] = "Budgets";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Budgets</h2>
    <a asp-action="Create" class="btn btn-primary">Create New Budget</a>
</div>

<div class="row">
    @foreach (var budget in Model)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@budget.Name</h5>
                    <span class="badge" style="background-color: @budget.Category.Color">
                        @budget.Category.Name
                    </span>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span>Budget Amount:</span>
                            <strong>$@budget.Amount.ToString("N2")</strong>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Period:</span>
                            <small>@budget.StartDate.ToString("MMM dd") - @budget.EndDate.ToString("MMM dd, yyyy")</small>
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(budget.Description))
                    {
                        <p class="card-text">@budget.Description</p>
                    }
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@budget.Id" class="btn btn-sm btn-outline-primary">View Details</a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@budget.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@budget.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <h4 class="text-muted">No budgets found</h4>
        <p class="text-muted">Create your first budget to start tracking your spending.</p>
        <a asp-action="Create" class="btn btn-primary">Create Budget</a>
    </div>
}
