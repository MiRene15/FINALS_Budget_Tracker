@model IEnumerable<FINALS_Budget_Tracker.Infrastructure.Entities.Budget>

@{
    ViewData["Title"] = "Budgets";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">Budgets</h2>
        <p class="text-muted mb-0">Set and track your spending limits</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <span>ðŸŽ¯</span> Create Budget
    </a>
</div>

@if (Model.Any())
{
    <div class="row g-4">
        @foreach (var budget in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h6 class="mb-0 fw-bold">@budget.Name</h6>
                        <span class="badge" style="background-color: @budget.Category.Color; color: white;">
                            @budget.Category.Name
                        </span>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted">Budget Amount</span>
                                <span class="fw-bold text-primary">$@budget.Amount.ToString("N2")</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted">Period</span>
                                <small class="text-muted">@budget.StartDate.ToString("MMM dd") - @budget.EndDate.ToString("MMM dd, yyyy")</small>
                            </div>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(budget.Description))
                        {
                            <p class="card-text text-muted small">@budget.Description</p>
                        }
                        
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between">
                                <a asp-action="Details" asp-route-id="@budget.Id" class="btn btn-sm btn-outline-primary">View Details</a>
                                <div>
                                    <a asp-action="Edit" asp-route-id="@budget.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@budget.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="empty-state">
        <div class="display-4 mb-3">ðŸŽ¯</div>
        <h4>No budgets created yet</h4>
        <p>Create your first budget to start tracking your spending goals.</p>
        <a asp-action="Create" class="btn btn-primary">Create Your First Budget</a>
    </div>
}
