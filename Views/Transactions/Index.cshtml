@model IEnumerable<FINALS_Budget_Tracker.Infrastructure.Entities.Transaction>

@{
    ViewData["Title"] = "Transactions";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Transactions</h2>
    <a asp-action="Create" class="btn btn-primary">Add New Transaction</a>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Description</th>
                <th>Category</th>
                <th>Type</th>
                <th>Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model)
            {
                <tr>
                    <td>@transaction.Date.ToString("MMM dd, yyyy")</td>
                    <td>@transaction.Description</td>
                    <td>
                        <span class="badge" style="background-color: @transaction.Category.Color">
                            @transaction.Category.Name
                        </span>
                    </td>
                    <td>
                        <span class="badge @(transaction.Type == FINALS_Budget_Tracker.Infrastructure.Entities.TransactionType.Income ? "bg-success" : "bg-danger")">
                            @transaction.Type
                        </span>
                    </td>
                    <td class="@(transaction.Type == FINALS_Budget_Tracker.Infrastructure.Entities.TransactionType.Income ? "text-success" : "text-danger")">
                        @(transaction.Type == FINALS_Budget_Tracker.Infrastructure.Entities.TransactionType.Income ? "+" : "-")$@transaction.Amount.ToString("N2")
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@transaction.Id" class="btn btn-sm btn-outline-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@transaction.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@transaction.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <h4 class="text-muted">No transactions found</h4>
        <p class="text-muted">Start by adding your first transaction.</p>
        <a asp-action="Create" class="btn btn-primary">Add Transaction</a>
    </div>
}
