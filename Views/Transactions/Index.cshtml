@model IEnumerable<FINALS_Budget_Tracker.Infrastructure.Entities.Transaction>

@{
    ViewData["Title"] = "Transactions";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">Transactions</h2>
        <p class="text-muted mb-0">Track and manage your income and expenses</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <span>‚ûï</span> Add Transaction
    </a>
</div>

@if (Model.Any())
{
    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Category</th>
                        <th>Type</th>
                        <th class="text-end">Amount</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var transaction in Model)
                    {
                        <tr>
                            <td>
                                <div class="fw-medium">@transaction.Date.ToString("MMM dd")</div>
                                <small class="text-muted">@transaction.Date.ToString("yyyy")</small>
                            </td>
                            <td>
                                <div class="fw-medium">@transaction.Description</div>
                                @if (!string.IsNullOrEmpty(transaction.Notes))
                                {
                                    <small class="text-muted">@transaction.Notes</small>
                                }
                            </td>
                            <td>
                                <span class="badge" style="background-color: @transaction.Category.Color; color: white;">
                                    @transaction.Category.Name
                                </span>
                            </td>
                            <td>
                                <span class="badge @(transaction.Type == FINALS_Budget_Tracker.Infrastructure.Entities.TransactionType.Income ? "bg-success" : "bg-danger")">
                                    @transaction.Type
                                </span>
                            </td>
                            <td class="text-end">
                                <span class="fw-bold @(transaction.Type == FINALS_Budget_Tracker.Infrastructure.Entities.TransactionType.Income ? "text-success" : "text-danger")">
                                    @(transaction.Type == FINALS_Budget_Tracker.Infrastructure.Entities.TransactionType.Income ? "+" : "-")$@transaction.Amount.ToString("N2")
                                </span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@transaction.Id" class="btn btn-sm btn-outline-primary">View</a>
                                    <a asp-action="Edit" asp-route-id="@transaction.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@transaction.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="empty-state">
        <div class="display-4 mb-3">üìù</div>
        <h4>No transactions yet</h4>
        <p>Start tracking your finances by adding your first transaction.</p>
        <a asp-action="Create" class="btn btn-primary">Add Your First Transaction</a>
    </div>
}
